  </head>

  <body class="bg-light">

    <div class="container">


      <div class="py-5 text-center">
        <h2 class="text-muted">ACADEMIA - Pagos @Model.Nombre</h2>
      </div>
<form action="~/SistemaPagos/Registro_Pagos" method="post">
      <div class="row">
        
        <div class="col-md-6">

            


            
            <div class="mb-3">
              <table class="table">
                <thead>
                  <tr>
                    <th scope="col"><button type="button" class="btn btn-outline-info" data-toggle="modal" data-target="#inf_educativa">Inf. Pesonal</button></th>
                    <th scope="col"><button type="button" class="btn btn-outline-info" data-toggle="modal" data-target="#inf_personal">Inf. Educativa</button></th>
                  </tr>
                </thead>
                </tbody>
              </table>
            </div>

     

            <div class="mb-3">
              <table class="table table-sm">
                <thead>
                  <tr>
                    <th scope="col">Cuenta</th>
                    <th scope="col">Concepto</th>
                    <th scope="col">Monto</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>
                      <div class="col-md-8">
                         <input type="hidden" asp-for="Id">
                        <input type="text" class="form-control" asp-for="Cuenta1">
                        @Html.ValidationMessageFor(m => m.Cuenta1, "", new { @class = "text-danger" })
                      </div>
                    </td>
                    <td>
                      <div class="col-md-24">
                        <input type="text" class="form-control" id="concepto1" name="concepto1" placeholder="Pensión 1" disabled="" value="">
                      </div>
                    </td>
                    <td>
                      <div class="col-md-8">
                        <input type="text" class="form-control" asp-for="Monto1">
                        @Html.ValidationMessageFor(m => m.Monto1, "", new { @class = "text-danger" })
                      </div>
                    </td>
                  </tr>

                  <tr>
                    <td>
                      <div class="col-md-8">
                        <input type="text" class="form-control" asp-for="Cuenta2">
                        @Html.ValidationMessageFor(m => m.Cuenta2, "", new { @class = "text-danger" })
                      </div>
                    </td>
                    <td>
                      <div class="col-md-24">
                        <input type="text" class="form-control" id="concepto2" name="concepto2" placeholder="Pensión 2" Disabled="">
                      </div>
                    </td>
                    <td>
                      <div class="col-md-8">
                        <input type="text" class="form-control" asp-for="Monto2">
                        @Html.ValidationMessageFor(m => m.Monto2, "", new { @class = "text-danger" })
                      </div>
                    </td>
                  </tr>

                  <tr>
                    <td>
                      <div class="col-md-8">
                        <input type="text" class="form-control" asp-for="Cuenta3">
                      </div>
                    </td>
                    <td>
                      <div class="col-md-24">
                        <input type="text" class="form-control" id="concepto3" name="concepto3" placeholder="Pensión 3" disabled="">
                      </div>
                    </td>
                    <td>
                      <div class="col-md-8">
                        <input type="text" class="form-control" asp-for="Monto3">
                      </div>
                    </td>
                  </tr>

                  <tr>
                    <td>
                      <div class="col-md-8">
                        <input type="text" class="form-control" asp-for="Cuenta4">
                      </div>
                    </td>
                    <td>
                      <div class="col-md-24">
                        <input type="text" class="form-control" id="concepto4" name="concepto4" placeholder="Pensión 4" disabled="">
                      </div>
                    </td>
                    <td>
                      <div class="col-md-8">
                        <input type="text" class="form-control" asp-for="Monto4">
                      </div>
                    </td>
                  </tr>

                  <tr>
                    <td>
                      <div class="col-md-8">
                       <input type="text" class="form-control" asp-for="Cuenta5">
                      </div>
                    </td>
                    <td>
                      <div class="col-md-24">
                        <input type="text" class="form-control" id="concepto5" name="concepto5" placeholder="Pensión 5" disabled="">
                      </div>
                    </td>
                    <td>
                      <div class="col-md-8">
                        <input type="text" class="form-control" asp-for="Monto5">
                      </div>
                    </td>
                  </tr>

                  <tr>
                    <td>
                      <div class="col-md-8">
                        <input type="text" class="form-control" asp-for="Cuenta6">
                      </div>
                    </td>
                    <td>
                      <div class="col-md-24">
                        <input type="text" class="form-control" id="concepto6" name="concepto6" placeholder="Pensión 6" disabled="">
                      </div>
                    </td>
                    <td>
                      <div class="col-md-8">
                       <input type="text" class="form-control" asp-for="Monto6">
                      </div>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
        </div>


        <div class="col-md-6">
          <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-muted"></span>
          </h4>
           <div class="form-group">
       
    <div class="mb-3">
        <table class="table table-sm">
                <tbody>


                </tbody>
              </table>
    </div>


    
       
           <div class="mb-3">
              <table class="table">
                <thead>
            
                  <tr>
                       <th scope="col">
                        <button class="btn btn-outline-success">Grabar ACADEMIA</button>
                    </th>
                    <th scope="col">
                    <a href="~/SistemaPagos/Index" class="btn btn-outline-success">Inicio</a></th>
                  </tr>
                </thead>
                </tbody>
              </table>
            </div>


        </div>

      </div>

    </div>  
</form>

<!-- Modal -->
<div class="modal fade" id="inf_personal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Información Educativa</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row">
              <div class="col-md-6 mb-3">
                <label for="cc-name">Ciclo</label>
                <input type="text" class="form-control" id="cc-name" placeholder="" disabled="" value="@Model.Ciclo">
              </div>
              <div class="col-md-6 mb-3">
                <label for="cc-number">Modalidad</label>
                <input type="text" class="form-control" id="cc-number" placeholder="" disabled="" value="@Model.Modalidad">
              </div>

              <div class="col-md-6 mb-3">
                <label for="cc-name">Aula</label>
                <input type="text" class="form-control" id="cc-name" placeholder="" disabled="" value="@Model.Aula">
              </div>
              <div class="col-md-6 mb-3">
                <label for="cc-number">Turno</label>
                <input type="text" class="form-control" id="cc-number" placeholder="" disabled="" value="@Model.Turno">
              </div>

        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


<!-- Modal -->
<div class="modal fade" id="inf_educativa" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Información Pesonal</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

            <div class="mb-3">
              <label for="address">Dirección</label>
              <input type="text" class="form-control" id="address" placeholder="" disabled="" value="@Model.Direccion">
            </div>
            <div class="mb-3">
              <label for="address">Apoderado</label>
              <input type="text" class="form-control" id="address" placeholder="" disabled="" value="@Model.Apoderado">
            </div>
            <div class="mb-3">
              <label for="address">Teléfonos</label>
              <input type="text" class="form-control" id="address" placeholder="" disabled="" value="@Model.Celular">
            </div>
            <div class="mb-3">
              <label for="address">Correo</label>
              <input type="text" class="form-control" id="address" placeholder="" disabled="" value="@Model.Correo">
            </div>
            <div class="mb-3">
              <label for="address">Dni</label>
              <input type="text" class="form-control" id="address" placeholder="" disabled="" value="@Model.Dni">
            </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>









  </body>
</html>
